<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/linearParent"
        android:layout_height="544dp"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            android:id="@+id/textView"
            style="@style/headerTextPrimary"
            android:text="Welcome to LogSin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/logout_btn"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:text="Logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/complaint_btn"
            app:layout_constraintVertical_bias="0.229" />

        <Button
            android:id="@+id/complaint_btn"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:text="Raise Complaint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewlocation_btn" />

        <Button
            android:id="@+id/viewlocation_btn"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:text="View Locations"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showlocation_btn" />

        <Button
            android:id="@+id/showlocation_btn"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:text="Show Locations"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>